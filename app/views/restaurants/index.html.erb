<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
    
    <% if current_user && current_user.id == restaurant.user_id %>
      <h3><%= link_to "Edit #{restaurant.name}",  edit_restaurant_path(restaurant) %></h3>
      <h3><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %> </h3>
    <% end %>

    <h3>Reviews:</h3>
    <% if restaurant.reviews.any? %>
      <ul>
          <% restaurant.reviews.each do |review| %>
            <li>
            <%= review.thoughts %>, <strong><%= review.rating %></strong>
            </li>
          <% end %>
      </ul>
      <% else %>
        <p>No Reviews</p>
      <% end %>
    <h3><%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %></h3>
  <% end %>
<% else %>
  <h1>no restaurants yet</h1>
<% end %>

<% if current_user %>
  <a href=<%=new_restaurant_path%>>add restaurant</a>
<% end %>



